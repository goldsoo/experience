{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "eqeqeq": [
      "error",
      "allow-null"
    ],
    "curly": [
      "error"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error", 
      "single",
      "avoid-escape"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}