extends /layouts/layout.pug

block variables
  -
    var page = {
      title: 'Chasooyoung Resume',
      bodyId: 'resume'
    }

block append css
  link(rel="stylesheet" href="./styles/index.css")

block body
  .container
    .topWrapper
      .img
        img(src= basics.picture alt= basics.name.korea)
      .messageWrapper
        | Hello, I'm Cha Sooyoung

      .infoWrap
        .row
          .part
            dfn name.
            span.detail= basics.name.korea
          .part
            dfn m.
            span.detail= basics.phone.handPhone
          .part
            dfn e-mail.
            span.detail= basics.email

        .row
          .part
            dfn website.
            a.detail(href= 'https://' + basics.website target="_blank")
              = basics.website
          .part
            dfn github.
            a.detail(href= 'https://' + basics.github target="_blank")
              = basics.github

        .row
          .part
            dfn addr.
            span.detail= basics.location.koreaAddress

    .contentsWrapper
      .educationWrapper
        h2
          span 학력

        .partWrap
          each $education in education
            .part(class= $education.grade)
              .institution= $education.institution

              if $education.major
                .major= $education.major

              if $education.gpa
                .gpa= $education.gpa

              .period
                = $education.startDate + ' ~ ' + $education.endDate

      .careerWrapper
        h2
          span 경력

        .partWrap
          each $career in career
            .part(class= $career.label)
              .company= $career.company
              .row
                span.department= $career.department
                span.rank= $career.rank
              .task= $career.task
              .period= $career.startDate + ' ~ ' + $career.endDate

      .experienceWrapper
        each $experience in experience
          .partWrap
            .projectWrap
              .col
                .company= $experience.company
                .name= $experience.project.name

              .col
                .appsWrap
                  each $apps in $experience.project.apps
                    .row
                      if $apps.type === 'Mobile Website' && $apps.icon
                        a.icon(href= $apps.appUrl target="_blank")
                          img(src= $apps.icon alt= $experience.project.name)
                      else
                        .typeWrap
                          dfn type.
                          span.type= $apps.type

                      if $apps.url
                        a.url(href= $apps.url target="_blank")
                          = $apps.url

                      .description
                        = $apps.description

                      .periodWrap
                        dfn 기간
                        span.period= $apps.period.from + ' ~ ' + $apps.period.to

                      .vcsWrap
                        dfn Version Control System
                        span.vcs= $apps.vcs

              .col
                each $roles in $experience.roles
                  .roles= $roles

      .skillsWrapper
        h2
          span 스킬

        .skillContentsWrap
          .partWrap
            .part.language
              .title= skills.language.title
              .listWrap
                each $list in skills.language.list
                  .row
                    span.name(style= 'width:' +  $list.percentage + '%')
                      em= $list.name + ' ' + $list.percentage + '%'

            .part.templateEngines
              .title= skills.templateEngines.title
              .listWrap
                each $list in skills.templateEngines.list
                  .row
                    span.name(style= 'width:' +  $list.percentage + '%')
                      em= $list.name + ' ' + $list.percentage + '%'
                  .website= $list.website
                  .description= $list.description

            .part.softwareTools
              .title= skills.softwareTools.title
              .listWrap
                each $list in skills.softwareTools.list
                  .row
                    span.name(style= 'width:' +  $list.percentage + '%')
                      em= $list.name + ' ' + $list.percentage + '%'

            .part.versionControlSystem
              .title= skills.versionControlSystem.title
              .listWrap
                each $list in skills.versionControlSystem.list
                  .row
                    span.name(style= 'width:' +  $list.percentage + '%')
                      em= $list.name + ' ' + $list.percentage + '%'

      .certificateWrapper
        h2 자격증

        .partWrap
          each $certificate in certificate
            .part
              .col.name= $certificate.name
              .col.acquireDate= $certificate.acquireDate

      .educationCompletionWrapper
        h2 교육이수

        .partWrap
          each $educationCompletion in educationCompletion
            .part
              .col.institution= $educationCompletion.institution
              .col.period
                = $educationCompletion.startDate + ' ~ ' + $educationCompletion.endDate
              .col.name= $educationCompletion.name
              .col.label= $educationCompletion.label

      .awardsWrapper
        h2 수상

        .partWrap
          each $awards in awards
            .part
              .col.title= $awards.title
              .col.date= $awards.date
              .col.awarder= $awards.awarder
              .col.summary= $awards.summary

